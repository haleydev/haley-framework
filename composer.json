{
    "name": "haleydev/haley-framework",
    "description": "Base framework Haley",
    "keywords": [
        "framework",
        "haley"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Warley Rodrigues de Moura",
            "email": "haleytrader@hotmail.com",
            "role": "Developer"      
        }
    ],
    "require": {
        "php": "^8.1.0",
        "phpmailer/phpmailer": "^6.8"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "src"
        },

        "files": [
            "src/Collections/helpers.php"           
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}